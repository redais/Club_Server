<table class="profile" summary="Profile information">
	
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for_club @club %>
        <%= @club.login %>
      </h1>
	  
	  <%if session[:club_id]==@club.id%>
	  	<% unless @club.members.empty? %>
        	<table class="members" summary="Club Members">
          		<%= render @members %>
        	</table>
			<%= will_paginate @members %>
       	<% end %>
		<td class="sidebar round">
      		<strong>Name</strong> <%= @club.name %><br />
      		<strong>URL</strong>  <%= link_to club_path(@club), @club %><br />
      		<strong>Club members</strong>  <%= @club.members.count %><br />
      		<strong><%= link_to 'Edit', edit_club_path(@student) %></strong>
    	</td>
	  <% end%>
	  <%if session[:club_id]==nil%>
	  	<td class="sidebar round">
      		
      		<strong><%= link_to 'Sign up to join', '../members/new' %></strong>
    	</td>
	  <%end%>
	  	
	 
	 </td>
	  
  </tr>
</table>